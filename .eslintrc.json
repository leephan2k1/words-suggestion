//ref: https://github.com/mattaharish/fastify-boilerplate/blob/master/.eslintrc.json
{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "google",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:node/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "no-undef": "off",
        "new-cap": "off",
        "no-var": "error",
        "require-jsdoc": "off",
        "no-unused-vars": "error",
        "no-process-exit": "off",
        "semi": ["error"],
        "no-console": [
            "error",
            {
                "allow": ["time", "timeEnd"]
            }
        ]
    }
}
